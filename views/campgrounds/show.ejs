<% layout('layout/boilerplate') %> 
<div class="row">
    <div class="col-6 offset-3  ">
        <div class="card" >
            <img src="https://images.unsplash.com/photo-1611427873781-91646cd610af?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80 " class="card-img-top" alt="...">
            <div class="card-body">
              <h2 class="card-title"><%= campground.title %> </h2>
              <h5></h5>
              <p class="card-text"><%= campground.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night </li>
              </ul>
            <div class="card-body">
                
              <a class="me-2" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
              <a href="/campgrounds">All Campgrounds</a>
            </div>
          </div>
    </div>
</div>
    
