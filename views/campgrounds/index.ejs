
<% layout('layout/boilerplate') %> 

    <h1>All Campgrounds</h1>
    
    
        <% for (let campground of campgrounds){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="https://images.unsplash.com/photo-1611427873781-91646cd610af?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80 ">
                    </div>
                
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title  %> 
                        </h5>
                        <p class="card-text"><%= campground.description %> </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>    
                        </p>
                        <a href="/campgrounds/<%= campground.id %> " class="btn btn-primary">View <%= campground.title %> </a>
                    </div>
                </div>
            </div>
            </div>
        <% }%>
    



